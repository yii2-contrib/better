{
  "name": "yii2-contrib/better",
  "description": "Better implement of the yii2",
  "keywords": [
    "better",
    "Yii2",
    "yiisoft"
  ],
  "homepage": "https://github.com/yii2-contrib/better",
  "license": "MIT",
  "authors": [
    {
      "name": "lichunqiang",
      "email": "light-li@hotmail.com"
    }
  ],
  "require": {
    "php": "~5.6|~7.0"
  },
  "autoload": {
    "psr-4": {
      "YiiContrib\\Better\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "YiiContribTest\\Better\\": "tests"
    }
  },
  "scripts": {
    "optimizer": "composer dump-autoload -o --apcu",
    "test": [
      "php ./vendor/bin/phpunit"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0||~5.0||~6.0"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
